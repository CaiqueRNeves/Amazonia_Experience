# Servidor
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=seu_jwt_secret_key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=seu_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Database
DB_FILENAME=database.sqlite

# Segurança
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CSP_DIRECTIVES=default-src 'self'; script-src 'self'

# PWA
CACHE_VERSION=1.0.0
OFFLINE_ANALYTICS_QUEUE_SIZE=20

# Chatbot
CHATBOT_NLP_MODEL=basic
CHATBOT_CONFIDENCE_THRESHOLD=0.7

# Quizzes
QUIZ_DEFAULT_TIMEOUT_MINUTES=15
QUIZ_MAX_ATTEMPTS_PER_DAY=5

# Mapas e Serviços
LEAFLET_API_KEY=sua_leaflet_api_key
GEOCODING_API_KEY=sua_geocoding_api_key

# Cors
CORS_ORIGIN=http://localhost:3000

# Internacionalização
DEFAULT_LANGUAGE=pt-BR
SUPPORTED_LANGUAGES=pt-BR,en-US,es-ES,fr-FR,de-DE,zh-CN,ru-RU