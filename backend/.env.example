# Configuração do servidor
PORT=3000
NODE_ENV=development

# Configuração CORS
CORS_ORIGIN=*

# Configuração JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=7d

# Configuração de Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Configuração de Quiz
QUIZ_MAX_ATTEMPTS_PER_DAY=5
QUIZ_DEFAULT_TIMEOUT_MINUTES=15

# URLs do frontend (para CORS e redirecionamentos)
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Configuração de email (para funcionalidades futuras)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Configuração de upload de arquivos (para funcionalidades futuras)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Configuração de cache Redis (para funcionalidades futuras)
REDIS_URL=redis://localhost:6379

# Configuração de logs
LOG_LEVEL=debug