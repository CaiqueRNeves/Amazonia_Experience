{
  "name": "amazonia-experience-backend",
  "version": "0.1.0",
  "description": "Backend para a plataforma Amaz√¥niaExperience da COP30",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t amazonia-experience-backend:latest .",
    "docker:run": "docker run -p 3000:3000 amazonia-experience-backend:latest",
    "docker:compose": "docker-compose up",
    "docker:compose:build": "docker-compose up --build",
    "prepare-release": "standard-version",
    "prepare": "husky install"
  },
  "keywords": [
    "cop30",
    "amazonia",
    "tourism",
    "gamification"
  ],
  "authors": [
    "Caique Rabelo Neves",
    "Lucas Soares dos Santos"
  ],
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "i18next": "^23.2.11",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "morgan": "^1.10.0",
    "node-nlp": "^4.27.0",
    "nodemailer": "^6.9.3",
    "socket.io": "^4.7.1",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3"
  }
}
