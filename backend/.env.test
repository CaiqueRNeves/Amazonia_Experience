# Configurações para ambiente de testes
NODE_ENV=test
PORT=3001

# JWT
JWT_SECRET=test_jwt_secret_key
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=test_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=1d

# Database (em memória para testes)
DB_FILENAME=:memory:

# Segurança
RATE_LIMIT_WINDOW=1
RATE_LIMIT_MAX=1000
CSP_DIRECTIVES=default-src 'self'; script-src 'self'

# Chatbot
CHATBOT_NLP_MODEL=basic
CHATBOT_CONFIDENCE_THRESHOLD=0.5

# Quizzes
QUIZ_DEFAULT_TIMEOUT_MINUTES=5
QUIZ_MAX_ATTEMPTS_PER_DAY=100

# Cors
CORS_ORIGIN=*

# Internacionalização
DEFAULT_LANGUAGE=pt-BR
SUPPORTED_LANGUAGES=pt-BR,en-US