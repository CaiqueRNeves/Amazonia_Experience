# ------------------------------
# Variáveis para Docker e CI/CD
# ------------------------------

# Configurações do Node.js
NODE_ENV=production
PORT=3000

# Configurações do JWT
JWT_SECRET=seu_jwt_secret_key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=seu_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Configurações de segurança
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CSP_DIRECTIVES=default-src 'self'; script-src 'self'

# Configurações da aplicação
CACHE_VERSION=1.0.0
OFFLINE_ANALYTICS_QUEUE_SIZE=20
QUIZ_DEFAULT_TIMEOUT_MINUTES=15
QUIZ_MAX_ATTEMPTS_PER_DAY=5

# Configurações do Docker
DOCKER_REGISTRY=yourusername
TAG=latest
ADMINER_PORT=8080

# Configurações para CI/CD
GITHUB_TOKEN=
DOCKERHUB_USERNAME=
DOCKERHUB_TOKEN=
SERVER_IP=
SSH_USER=
SSH_PRIVATE_KEY=